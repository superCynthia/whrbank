<Window x:Class="银行储蓄管理.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="271" Width="407">
    <Grid Margin="0,0,0,1">
        <Grid.Background>
            <ImageBrush ImageSource="/images/登录.jpg" Stretch="UniformToFill" TileMode="None" />
        </Grid.Background>
        <TextBox x:Name="tb_log1" HorizontalAlignment="Left" Height="25" Margin="106,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>
        <Button x:Name="btn_login" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="303,112,0,0" VerticalAlignment="Top" Width="65" Height="70"/>
        <Button Background="Transparent" BorderBrush="Transparent" Name="btn_exit" Foreground="White" Content="x" HorizontalAlignment="Left" Margin="368,0,0,0" VerticalAlignment="Top" Height="28" RenderTransformOrigin="0.25,0.571" Width="21"/>
        <PasswordBox  x:Name="tb_log2" HorizontalAlignment="Left" Height="25" Margin="106,157,0,0" VerticalAlignment="Top" Width="177"/>

    </Grid>
</Window>
